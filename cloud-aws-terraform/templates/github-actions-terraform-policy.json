{
    "Id": "github-actions-terraform-policy",
    "Version": "2012-10-17",
    "Statement": [
        {
            "Sid": "terraform-state-protection",
            "Effect": "Deny",
            "Action": [
                "s3:CreateBucket",
                "s3:DeleteBucket",
                "s3:DeleteBucketPolicy"
            ],
            "Resource": [
                "arn:aws:s3:${region_id}:${account_id}:${bucket_id}"
            ]
        },
        {
            "Sid": "terraform-lock-protection",
            "Effect": "Deny",
            "Action": [
                "dynamodb:DeleteTable"
            ],
            "Resource": [
                "arn:aws:dynamodb:${region_id}:${account_id}:table/${table_id}"
            ]
        },
        {
            "Sid": "terraform-allowed-actions",
            "Effect": "Allow",
            "Action": [
                "lambda:*",
                "apigateway:*",
                "ec2:*",
                "rds:*",
                "s3:*",
                "sns:*",
                "states:*",
                "ssm:*",
                "sqs:*",
                "iam:*",
                "elasticloadbalancing:*",
                "autoscaling:*",
                "cloudwatch:*",
                "cloudfront:*",
                "route53:*",
                "ecr:*",
                "logs:*",
                "ecs:*",
                "application-autoscaling:*",
                "logs:*",
                "events:*",
                "elasticache:*",
                "es:*",
                "kms:*",
                "dynamodb:*"
            ],
            "Resource": [
                "*"
            ]
        },
        {
            "Sid": "terraform-denied-actions",
            "Effect": "Deny",
            "Action": [
                "iam:*User*",
                "iam:*Login*",
                "iam:*Group*",
                "iam:*Provider*",
                "aws-portal:*",
                "budgets:*",
                "config:*",
                "directconnect:*",
                "aws-marketplace:*",
                "aws-marketplace-management:*",
                "ec2:*ReservedInstances*"
            ],
            "Resource": [
                "*"
            ]
        }
    ]
}
